{
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"],
    "lib": ["es2020"],
    "module": "ESNext",
    "target": "es2020",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["./**/*.ts"]
}
