  "accounts": [
    {
      "name": "Config",
      "docs": [
        "Program configuration account."
      ],
      "type": {
        "kind": "struct",
        "fields": [
          {
            "name": "owner",
            "docs": [
              "Program's owner (can register peers)."
            ],
            "type": "publicKey"
          },
          {
            "name": "wormhole",
            "docs": [
              "Wormhole program's relevant addresses."
            ],
            "type": {
              "defined": "WormholeAddresses"
            }
          },
          {
            "name": "batchId",
            "docs": [
              "AKA nonce. Just zero, but saving this information anyway."
            ],
            "type": "u32"
          },
          {
            "name": "finality",
            "docs": [
              "Consistency level for posted messages.",
              "u8 representation of [Finality](wormhole_anchor_sdk::wormhole::Finality)."
            ],
            "type": "u8"
          }
        ]
      }
    },
    {
      "name": "Peer",
      "docs": [
        "Registered peer contract on another chain."
      ],
      "type": {
        "kind": "struct",
        "fields": [
