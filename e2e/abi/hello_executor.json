    {
      "name": "registerPeer",
      "docs": [
        "Register a peer contract on another chain.",
        "Only the owner can call this instruction.",
        "",
        "# Arguments",
        "* `ctx` - RegisterPeer context",
        "* `chain` - Wormhole chain ID of the peer",
        "* `address` - Universal address of the peer contract"
      ],
      "accounts": [
        {
          "name": "owner",
          "isMut": true,
          "isSigner": true,
          "docs": [
            "Owner of the program. Must match config.owner."
          ]
        },
        {
          "name": "config",
          "isMut": false,
          "isSigner": false,
          "docs": [
            "Config account. Verifies the owner."
          ]
        },
        {
          "name": "peer",
          "isMut": true,
          "isSigner": false,
          "docs": [
            "Peer account for the specified chain."
          ]
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false,
          "docs": [
            "System program."
          ]
        }
